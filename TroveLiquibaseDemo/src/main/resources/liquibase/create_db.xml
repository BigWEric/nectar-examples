<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet id="1" author="mpaulo">
        <createTable tableName="PRODUCTS">
            <column name="ID" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="CODE" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="DESCRIPTION" type="varchar(200)"/>
            <column name="VALUE" type="varchar(200)"/>
        </createTable>
        <createTable tableName="CELLARS">
            <column name="ID" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="CODE" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="NAME" type="varchar(200)"/>
        </createTable>
        <createTable tableName="PRODUCT_CELLAR">
            <column name="ID" type="bigint(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="PRODUCT_CODE" type="varchar(20)">
            </column>
            <column name="CELLAR_CODE" type="varchar(20)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" engine innodb"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>